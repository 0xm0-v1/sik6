{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "project": false
  },
  "extends": [
    "eslint:recommended",
    "plugin:@angular-eslint/recommended"
  ],
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@angular-eslint"],
      "rules": {
        "no-unused-vars": "error",
        "no-console": "warn"
      }
    },
    {
      "files": ["*.html"],
      "plugins": ["@angular-eslint/template"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {}
    }
  ]
}
